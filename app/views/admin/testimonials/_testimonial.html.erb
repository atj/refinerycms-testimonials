<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(testimonial) -%>">
  <span class='title'>
    <span class='actions'>
      <%= link_to refinery_icon_tag("eye.png"), '#',
          :title => 'Toggle the display of this quote',
          :style => 'display:none;',
          :class => 'toggle_quote' %>
      <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_testimonial_path(testimonial),
           :title => t('.edit') %>
      <%= link_to refinery_icon_tag("delete.png"), admin_testimonial_path(testimonial),
          :class => "cancel confirm-delete",
          :title => t('.delete'),
          :'data-confirm' => t('shared.admin.delete.message', :title => testimonial.name),
          :'data-method' => :delete %>
    </span>

    <%= [content_tag(:b, h(testimonial.name)), h(testimonial.job_title), h(testimonial.company)].reject(&:blank?).join(", ").html_safe %>
    <span class="preview">&nbsp;</span>
    <div class="quote"><%= h(testimonial.quote) %></div>
  </span>
</li>
